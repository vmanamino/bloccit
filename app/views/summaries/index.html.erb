<h1>Summaries</h1>

<div class="row">
  <div class="col-md-8">
    <% @summaries.each do |summary| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to summary.summary, summary %>
          </h4>          
        </div>
      </div>   
    <% end %>
  </div>
  <div class="col-md-4">
    <% if policy(Summary.new).create? %>
      <%= link_to "New Summary", new_summary_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>