<h1><%= markdown_to_html @post.title %></h1>

<% if policy(@post).edit? %>
  <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
<% end %>
<div class="row">
  <div class="col-md-8">
     <small>
       <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
       submitted <%= time_ago_in_words(@post.created_at) %> ago by
       <%= @post.user.name %>
     </small>
    <p><%= markdown_to_html @post.body %></p>
    <p><%= @comments.count %> Comment(s)</p>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <p><%= image_tag( @post.image.profile.url ) if @post.image? %></p>
  </div>
   <div class="col-md-8">
     <%= render @comments %>
   </div>
   <div class="col-md-4">
    <% if policy(Comment.new).create? %>
     <%= link_to "Add Comment", new_post_comment_path(@post, @comment), class: 'btn btn-success' %>
    <% end %>
     <% if policy(@post).destroy? %>
     <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
     <% end %>
  </div>
</div>