<%= form_for topic do |f| %>
  <% if topic.errors.any? %>
  <div class="alert alert-dangers">
    <h4><%= pluralize(topic.errors.count, "error(s)") %></h4>
    <ul>
      <% topic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<%= form_group_tag(topic.errors[:name]) do %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', placeholder: "Enter the topic" %>
<% end %>
<%= form_group_tag(topic.errors[:description]) do %>
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control', placeholder: "Enter a description of the topic" %>
<% end %>
<%= form_group_tag(topic.errors[:public]) do %>
  <%= f.label :public %>
  <%= f.check_box :public, class: 'checkbox' %>
  Public topic
<% end %>
<div class="form-group">
  <%= f.submit "Save", class: 'btn btn-success' %>  
</div>
<% end %>


